{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "rewrites": [
    { "source": "/dashboard", "destination": "/public/dashboard.html" },
    { "source": "/advisor-dashboard", "destination": "/public/advisor-dashboard.html" },
    { "source": "/client-dashboard", "destination": "/public/client-dashboard.html" },
    { "source": "/consultant-dashboard", "destination": "/public/consultant-dashboard.html" },
    { "source": "/contacts", "destination": "/public/contacts.html" },
    { "source": "/deals", "destination": "/public/deals.html" },
    { "source": "/pipeline", "destination": "/public/pipeline.html" },
    { "source": "/proposals", "destination": "/public/proposals.html" },
    { "source": "/prequal-calls", "destination": "/public/prequal-calls.html" },
    { "source": "/podcast-calls", "destination": "/public/podcast-calls.html" },
    { "source": "/discovery-calls", "destination": "/public/discovery-calls.html" },
    { "source": "/strategy-calls", "destination": "/public/strategy-calls.html" },
    { "source": "/sprints", "destination": "/public/sprints.html" },
    { "source": "/campaigns", "destination": "/public/campaigns.html" },
    { "source": "/settings", "destination": "/public/settings.html" },
    { "source": "/user-management", "destination": "/public/user-management.html" },
    { "source": "/edit-profile", "destination": "/public/edit-profile.html" },
    { "source": "/availability", "destination": "/public/availability.html" },
    { "source": "/cash-flow", "destination": "/public/cash-flow.html" },
    { "source": "/expense-tracker", "destination": "/public/expense-tracker.html" },
    { "source": "/client-welcome", "destination": "/public/client-welcome.html" },
    { "source": "/client-success", "destination": "/public/client-success.html" },
    { "source": "/upload-transcript", "destination": "/public/upload-transcript.html" },
    { "source": "/trigger-analysis", "destination": "/public/trigger-analysis.html" },
    { "source": "/transcript-cleaner", "destination": "/public/transcript-cleaner.html" }
  ]
}
